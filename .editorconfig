# EditorConfig para DocsServe
# Proyecto de documentación basado en Markdown con Docsify

root = true

# Valores por defecto para todos los archivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Archivos Markdown - preservar espacios dobles para saltos de línea
[*.md]
trim_trailing_whitespace = false

# Makefiles requieren tabs
[Makefile]
indent_style = tab
